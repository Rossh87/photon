{
    "name": "server",
    "version": "0.0.1",
    "dependencies": {
        "@google-cloud/storage": "^5.8.1",
        "axios": "^0.21.1",
        "bcrypt": "^5.0.1",
        "connect-mongo": "^4.6.0",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "express-session": "^1.17.1",
        "fp-ts": "^2.11.1",
        "grant": "^5.4.9",
        "helmet": "^4.6.0",
        "io-ts": "^2.2.16",
        "io-ts-reporters": "^2.0.0",
        "io-ts-types": "^0.5.16",
        "mongodb": "^4.1.1",
        "monocle-ts": "^2.3.11",
        "morgan": "^1.10.0",
        "newtype-ts": "^0.3.4",
        "rate-limiter-flexible": "^2.2.4"
    },
    "scripts": {
        "start": "NODE_ENV=production node -r $PWD/configs/preRun build/server/index.js",
        "build": "rm -rf build/ && tsc",
        "start:dev": "NODE_ENV=dev node -r $PWD/configs/preDevRun index.ts",
        "start:inspect": "NODE_ENV=dev node --inspect -r $PWD/configs/preDevRun index.ts",
        "test": "jest",
        "testDB:re-init": "docker run --name photon-test-db -p 27017:27017 -d -v $PWD/configs/testDB/config:/etc/mongo -v $PWD/configs/testDB/data:/data/db mongo:6",
        "testDB:stop": "docker stop photon-test-db",
        "testDB:start": "docker start photon-test-db",
        "testDB:clear": "sudo rm -rf $PWD/configs/testDB/data/ && mkdir $PWD/configs/testDB/data/"
    },
    "devDependencies": {
        "@types/axios": "^0.14.0",
        "@types/bcrypt": "^5.0.0",
        "@types/body-parser": "^1.19.0",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.11",
        "@types/express-session": "^1.17.4",
        "@types/jest": "^26.0.20",
        "@types/morgan": "^1.9.3",
        "jest": "^26.6.3",
        "jest-circus": "^26.6.3",
        "ts-jest": "^26.5.0",
        "ts-node": "^9.1.1",
        "typescript": "^4.1.3"
    }
}
