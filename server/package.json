{
    "name": "server",
    "version": "1.0.0",
    "dependencies": {
        "@google-cloud/storage": "^5.8.1",
        "@types/cors": "^2.8.10",
        "@types/mongodb": "^3.6.7",
        "axios": "^0.21.1",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "express-session": "^1.17.1",
        "fp-ts": "^2.11.1",
        "grant": "^5.4.9",
        "io-ts": "^2.2.16",
        "io-ts-reporters": "^2.0.0",
        "mongodb": "^3.6.4",
        "morgan": "^1.10.0"
    },
    "scripts": {
        "start:dev": "NODE_ENV=dev node -r $PWD/configs/preDevRun index.ts",
        "start:inspect": "NODE_ENV=dev node --inspect -r $PWD/configs/preDevRun index.ts",
        "test": "jest",
        "testDB:re-init": "docker run --name photon-test-db -p 27017:27017 -d -v $PWD/configs/testDB/config:/etc/mongo -v$PWD/configs/testDB/data:/data/db mongo:4.4-bionic",
        "testDB:stop": "docker stop photon-test-db",
        "testDB:start": "docker start photon-test-db",
        "testDB:clear": "sudo rm -rf $PWD/configs/testDB/data/ && mkdir $PWD/configs/testDB/data/"
    },
    "devDependencies": {
        "@types/axios": "^0.14.0",
        "@types/body-parser": "^1.19.0",
        "@types/express": "^4.17.11",
        "@types/express-session": "^1.17.3",
        "@types/jest": "^26.0.20",
        "@types/morgan": "^1.9.3",
        "jest": "^26.6.3",
        "jest-circus": "^26.6.3",
        "ts-jest": "^26.5.0",
        "ts-node": "^9.1.1",
        "typescript": "^4.1.3"
    }
}
